<h1>Mes Mangas</h1>

<ul>
    <li><a href='/collections'>Mes collections</a></li>
    <li><a href='/locations'>Mes lieux</a></li>
    <li><a href='/mangas'>Mes mangas</a></li>
</ul>

<div>Filtrer les mangas ?</div>
<form action="/mangas/filter/" method="post">
    <label for="collection">Collection :</label>
    <select name="collection">
        <% 
        for (var i = 0; i<collections.length; i++) { %>
            <option><%= collections[i].name %></option>
            <% } 
        %>
    </select>
    <label for="location">Location :</label>
    <select name="location">
        <option value="paris">Paris</option>
        <option value="tokyo">Tokyo</option>
    </select>
    <button type="submit" id="validate">Valider</button>
</form>

